{
  "importMap": "runtime/deno/import_map.json",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch --import-map=runtime/deno/import_map.json src/platforms/deno.ts",
    "deploy": "deployctl deploy --project=i0c-redirect-worker src/platforms/deno.ts --import-map=runtime/deno/import_map.json"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "deno.ns"]
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"]
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "lineWidth": 100,
    "singleQuote": false,
    "semiColons": true
  }
}
